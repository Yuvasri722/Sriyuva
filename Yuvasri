def is_armstrong(num):
    num_str = str(num)
    order = len(num_str)
    sum_of_digits = sum(int(digit) ** order for digit in num_str)
    return sum_of_digits == num
num = int(input("Enter a number: "))
if is_armstrong(num):
    print(f"{num} is an Armstrong number.")
else
    print(f"{num} is not an Armstrong number.")
